{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules/**",
			"build/**",
			"dist/**",
			".react-router/**",
			"drizzle/**",
			"*.min.js",
			"*.min.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error",
				"useExhaustiveDependencies": "error"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noArrayIndexKey": "error"
			},
			"style": {
				"useConst": "error",
				"useTemplate": "error",
				"useShorthandArrayType": "error"
			},
			"complexity": {
				"noForEach": "off",
				"useOptionalChain": "error"
			},
			"performance": {
				"noDelete": "warn"
			},
			"a11y": {
				"useKeyWithClickEvents": "error",
				"useKeyWithMouseEvents": "error",
				"useMediaCaption": "error",
				"useValidAriaProps": "error",
				"useValidAriaValues": "error",
				"useValidAnchor": "error",
				"useButtonType": "error",
				"useHeadingContent": "error",
				"useAltText": "error",
				"useValidAriaRole": "error",
				"useValidLang": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"semicolons": "always"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"organizeImports": {
		"enabled": true
	}
}

{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"],
      "inputs": ["prisma/**", "src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"]
    },
    "lint": {
      "outputs": []
    },
    "test:update": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["prisma/**", "src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"]
    },
    "prisma:deploy": {
      "cache": false,
      "inputs": ["prisma/**"]
    },
    "prisma:generate": {
      "cache": false,
      "inputs": ["prisma/**"]
    },
    "start": {
      "cache": false
    },
    "dev": {
      "cache": false
    }
  },
  "globalEnv": [
    "APP_URL",
    "APP_USER_ID",
    "COOKIE_NAME",
    "COOKIE_SALT",
    "COOKIE_SECRET",
    "ENABLE_REQUEST_LOGGING",
    "NODE_ENV",
    "PORT",
    "SEGMENT_KEY"
  ]
}

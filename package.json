{
  "name": "rocco",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "docker:api:build": "docker build -t rocco-api:latest -f apps/api/Dockerfile .",
    "docker:api:run": "docker run -it -p 4444:4444 --name=rocco-api rocco-api",
    "docker:web:build": "docker build -t rocco-web:latest -f Dockerfile.web",
    "docker:web:run": "docker run -it -p 3000:80 rocco-web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "precommit": "pnpm format && pnpm lint",
    "prepare": "husky install",
    "prepush": "pnpm test",
    "prerelease": "pnpm test",
    "test": "turbo run test",
    "test:update": "turbo run test:update --scope rocco-web",
    "turbo:migrate": "turbo run prisma:generate && turbo run prisma:deploy"
  },
  "devDependencies": {
    "eslint-config-ponti": "workspace:*",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "prettier": "^2.8.7",
    "turbo": "^1.10.9"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "pnpm": "7.29.1"
  },
  "packageManager": "pnpm@7.29.1",
  "lint-staged": {
    "apps/**/*.{js,jsx,ts,tsx,md,json}": [
      "prettier --write"
    ],
    "packages/**/*.{js,jsx,ts,tsx,md,json}": [
      "prettier --write"
    ]
  }
}
